    <!-- PAGE 13: COMPARISON -->
    <div class="page">
        <div class="section-tag">Value Proposition</div>
        <h2 style="text-align: center; margin-bottom: 60px;">How EnCBAM Actually Solves CBAM</h2>

        <div style="max-width: 1400px; margin: 0 auto;">
